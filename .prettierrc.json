{
    "printWidth": 120,
    "tabWidth": 4,
    "useTabs": false,
    "semi": true,
    "singleQuote": false,
    "trailingComma": "none",
    "bracketSpacing": true,
    "bracketSameLine": false,
    "arrowParens": "avoid",
    "htmlWhitespaceSensitivity": "ignore",
    "overrides": [
        {
            "files": ["*.yml", "*.yaml"],
            "options": {
                "tabWidth": 2
            }
        },
        {
            "files": ["*.md", "*.mdx"],
            "options": {
                "printWidth": 100,
                "tabWidth": 4,
                "useTabs": false,
                "semi": false,
                "singleQuote": false,
                "trailingComma": "none",
                "bracketSpacing": true,
                "bracketSameLine": false,
                "arrowParens": "always",
                "endOfLine": "lf",
                "proseWrap": "always"
            }
        }
    ]
}
