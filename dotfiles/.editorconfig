# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[*.{cs,vb}]
# CA1305: Specify IFormatProvider
dotnet_diagnostic.CA1305.severity = none

[{*.yaml,*.yml}]
indent_size = 2

[{*.md}]
indent_size = 2
